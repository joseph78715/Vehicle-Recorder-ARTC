<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/artc_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/tvSensivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="碰撞靈敏度"
            android:textColor="@android:color/black"
            android:textSize="18dp"
             />

        <Spinner
            android:id="@+id/spinnerSensivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

             />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4">

        <TextView
            android:id="@+id/tvSleepTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="休眠時間"
            android:textColor="@android:color/black"
            android:textSize="18dp"
             />

        <Spinner
            android:id="@+id/spinnerSleepTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

             />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">

        <TextView
            android:id="@+id/tvCycle_Rec_length"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="影片長度"
            android:textColor="@android:color/black"
            android:textSize="18dp"

            />

        <Spinner
            android:id="@+id/spinnerCycle_Rec_Time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

             />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout6">

        <TextView
            android:id="@+id/tvEV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EV設定"
            android:layout_below="@+id/linearLayout5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black"
            android:textSize="18dp"/>

        <Spinner
            android:id="@+id/spinnerEV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <!-- android:gravity="center_horizontal" -->




    </LinearLayout>

    <TextView
        android:id="@+id/tvSOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout6" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSOS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout7">

        <EditText
            android:id="@+id/etMail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="請輸入第一組求救郵件"
            android:text="joseph78715@gmail.com"
            android:ems="10"
            android:gravity="center_horizontal"
             />

        <EditText
            android:id="@+id/etPhoneNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="請輸入第一組求救電話"
            android:text="0978320715"
            android:ems="10"
            android:gravity="center_horizontal"
            />
        <EditText
            android:id="@+id/etMail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="請輸入第二組求救郵件"
            android:ems="10"
            android:gravity="center_horizontal"
            />

        <EditText
            android:id="@+id/etPhoneNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="請輸入第二組求救電話"
            android:ems="10"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnSendMail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Mail1"
            />

        <Button
            android:id="@+id/btnSendSMS1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send SMS1"
             />

        <Button
            android:id="@+id/btnAlertDialogSendSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="碰撞模擬"
            />
    </LinearLayout>


</RelativeLayout>